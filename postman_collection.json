{
  "info": {
    "name": "Order Execution Engine API",
    "_postman_id": "order-execution-engine-v1",
    "description": "Complete API collection for testing the Order Execution Engine with DEX routing, WebSocket updates, and queue management.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Orders",
      "item": [
        {
          "name": "Execute Order (SOL to USDC)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has orderId\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('orderId');",
                  "    pm.environment.set(\"orderId\", jsonData.orderId);",
                  "});",
                  "",
                  "pm.test(\"Status is pending\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql('pending');",
                  "});",
                  "",
                  "pm.test(\"WebSocket URL is provided\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.websocketUrl).to.match(/^wss?:\\/\\//);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tokenIn\": \"So11111111111111111111111111111111111111112\",\n  \"tokenOut\": \"EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v\",\n  \"amountIn\": 10,\n  \"slippage\": 0.01\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/execute",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "execute"]
            },
            "description": "Submit a market order to exchange SOL for USDC. The order will be queued for processing and executed via the best DEX (Raydium or Meteora)."
          },
          "response": []
        },
        {
          "name": "Execute Order (Custom Slippage)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tokenIn\": \"So11111111111111111111111111111111111111112\",\n  \"tokenOut\": \"EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v\",\n  \"amountIn\": 5.5,\n  \"slippage\": 0.02\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/execute",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "execute"]
            },
            "description": "Execute order with custom slippage tolerance (2%)."
          },
          "response": []
        },
        {
          "name": "Get Order by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has order data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('order');",
                  "    pm.expect(jsonData.order).to.have.property('id');",
                  "    pm.expect(jsonData.order).to.have.property('status');",
                  "});",
                  "",
                  "pm.test(\"Order has valid status\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    var validStatuses = ['pending', 'routing', 'building', 'submitted', 'confirmed', 'failed'];",
                  "    pm.expect(validStatuses).to.include(jsonData.order.status);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}"]
            },
            "description": "Retrieve detailed information about a specific order using its ID. Make sure to execute an order first to get a valid orderId."
          },
          "response": []
        },
